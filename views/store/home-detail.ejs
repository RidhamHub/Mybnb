<%- include('../partials/head') %>
  </head>
  <body>
      <%- include('../partials/nav') %>
      <main class="container mx-auto p-8 ">
          <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
              Details of <%= home.houseName %>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div class="rounded-lg overflow-hidden">
                  <img src="<%= home.photo %>" alt="<%= home.name %>" class="w-full h-96 object-cover">
              </div>
              
              <div class="space-y-2">
                  <div class="border-b pb-1">
                      <h3 class="text-2xl font-semibold mb-1">Description</h3>
                      <p class="text-gray-600"><%= home.description %></p>
                  </div>

                  <div class="border-b pb-1">
                      <h3 class="text-2xl font-semibold mb-1">Location</h3>
                      <p class="text-gray-600"><%= home.location %></p>
                  </div>
                  
                  <div class="border-b pb-1">
                      <h3 class="text-2xl font-semibold mb-1">Price</h3>
                      <p class="text-green-600 text-xl font-bold">Rs <%= home.price %> / night</p>
                  </div>
                  
                  <div class="border-b pb-1">
                      <h3 class="text-2xl font-semibold mb-1">Rating</h3>
                      <div class="flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                          <span class="ml-2 text-lg"><%= home.rating %> / 5</span>
                      </div>
                  </div>
                  <div class="mt-2">
                    <%- include('../partials/favourite') %>
                  </div>
              </div> 
          </div>
      </main>
  </body>
</html>