<%- include('../partials/head') %>
</head>
<body class="bg-white font-sans min-h-screen text-gray-800">
  <%- include('../partials/nav') %>

  <main class="flex items-center justify-center min-h-screen px-4">
    <div class="w-full max-w-md bg-white shadow-xl rounded-2xl p-8">
      <!-- Heading -->
      <h1 class="text-4xl font-extrabold text-center text-rose-600 mb-2">
        Welcome Back
      </h1>
      <p class="text-center text-gray-500 mb-8">
        Login to continue listing or exploring properties
      </p>

      <!-- Login Form -->
      <form action="/login" method="POST" class="space-y-6">
        <%- include('../partials/errors') %>
        <!-- Email or Username -->
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Enter your email"
          value="<%= oldInput?.email || '' %>"
          required
          autofocus
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 transition"
        />

        <!-- Password -->
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter your password"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500 transition"
        />

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-rose-600 hover:bg-rose-700 transition text-white font-semibold py-3 rounded-lg shadow-lg"
        >
          Sign In
        </button>
      </form>

      <!-- Redirect to Signup -->
      <p class="text-center text-sm text-gray-500 mt-6">
        Donâ€™t have an account?
        <a href="/signup" class="text-rose-600 hover:underline">Sign up here</a>
      </p>
    </div>
  </main>
</body>
</html>
